# Session & Token Management Configuration
# Add these to your .env file

# Token expiry settings
SANCTUM_TOKEN_EXPIRY_MINUTES=480         # 8 hours in minutes
SANCTUM_TOKEN_EXPIRY_HOURS=8             # 8 hours (for cleaner config)
SANCTUM_REMEMBER_ME_DAYS=30              # 30 days for "remember me"
SANCTUM_EXPIRY_WARNING_MINUTES=30        # Warning when 30 minutes left

# Session settings
SESSION_LIFETIME=480                      # 8 hours in minutes
SESSION_EXPIRE_ON_CLOSE=false           # Keep session after browser close

# Security settings
SANCTUM_TOKEN_PREFIX=""                  # Optional token prefix for security
